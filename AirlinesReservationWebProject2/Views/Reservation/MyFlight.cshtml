@{
    ViewData["Title"] = "Seyahatlerim";
}
<div class="text-center">
    <h1 class="display-4">Seyahatlerim</h1>
</div>
@model IEnumerable<AirlinesReservationWebProject2.Entities.Flight>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeparatureTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeparatureTime)
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="" asp-route-id="@item.FlightId">İptal Et</a>
            </tr>
        }
    </tbody>
</table>