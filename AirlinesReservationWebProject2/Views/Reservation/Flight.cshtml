@model IEnumerable<AirlinesReservationWebProject2.Entities.Flight>

@{
    ViewData["Title"] = "Rezervasyon Yap";
}

<h1>Mevcut Uçuşlarımız</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeparatureTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeparatureTime)
                </td>
                <td>
                    <a class= "btn btn-light" asp-action="" asp-route-id="@item.FlightId">Rezervasyon Yap</a>
            </tr>
        }
    </tbody>
</table>
