@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Kullanıcı Ad</label>
                <input asp-for="Username" class="form-control" placeholder="Kullanıcı Adı" />
                <span asp-validation-for="Username" class="text-danger small"></span>

            </div>
            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label">Ad Soyad</label>
                <input asp-for="FullName" class="form-control" placeholder="Adınız Soyadınız" />
                <span asp-validation-for="FullName" class="text-danger small"></span>

            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Parola</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Parola"/>
                <span asp-validation-for="Password" class="text-danger small"></span>

            </div>
            <div class="form-group mb-3">
                <label asp-for="RePassword" class="form-label">Parola tekrar</label>
                <input asp-for="RePassword" type="password" class="form-control" placeholder="Parola" />
                <span asp-validation-for="RePassword" class="text-danger small"></span>

            </div>

            <div class="form-group d-grid mb-3">
                <button type="submit" class="btn btn-primary d-block"><i class="fa-solid fa-paper-plane me-2"></i>Register</button>
            </div>
        </form>
    </div>
</div>