@{
    ViewData["Title"] = "Profile";
}
<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>
<div class="row mt-4">
    <div class="col-4">

        <div class="mb-4">
            <div asp-validation-summary="All" class="text-danger small"></div>
        </div>

            <div class="form-group">
                <label class="form-label small">Kullanıcı Adı</label>
                <div class="input-group mb-3">
                    <input name="fullname" type="text" class="form-control" placeholder="Kullanici Adi" value="@ViewData["Username"]" disabled />
                </div>
            </div>


        <form method="post" asp-action="ProfileChangeFullName">
            <div class="form-group">
                <label class="form-label small">Name Surname</label>
                <div class="input-group mb-3">
                    <input name="fullname" type="text" class="form-control" placeholder="Ad Soyad" value="@ViewData["FullName"]" />
                    <button class="btn btn-secondary" type="submit"><i class="fa-solid fa-floppy-disk me-2"></i>Kaydet</button>
                </div>
            </div>
        </form>
        <form method="post" asp-action="ProfileChangePassword">
            <div class="form-group">
                <label class="form-label small">New Password</label>
                <div class="input-group">
                    <input name="password" type="password" class="form-control" placeholder="Yeni Parola" />
                    <button class="btn btn-secondary" type="submit"><i class="fa-solid fa-floppy-disk me-2"></i>Kaydet</button>
                </div>
                @if (ViewData["result"] != null && ViewData["result"] as string == "PasswordChanged")
                {
                    <span class="text-success small">Parola Güncellendi.</span>
                }
            </div>
        </form>



    </div>
</div>
@section Scripts{
    @if (ViewData["result"] != null && ViewData["result"] as string == "PasswordChanged")
    {
        <script>
            toastr["success"]("Şireniz değiştirilmiştir.", "Şifre Değişti!");
        </script>
    }
}

